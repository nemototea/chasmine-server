# ========================================
# Backend Configuration
# ========================================

# Server Port
PORT=3001

# Node Environment (development, production, test)
NODE_ENV=development

# ========================================
# Database Configuration (MySQL 8.4)
# ========================================

# Database Host (use 'db' for Docker, 'localhost' for local development)
DB_HOST=db

# Database Port
DB_PORT=3306

# Database Name
DB_NAME=chasmine_dev

# Database User
DB_USER=chasmine_user

# Database Password (Change this in production!)
DB_PASSWORD=chasmine_password

# Database Root Password (for Docker MySQL container)
DB_ROOT_PASSWORD=root_password

# Prisma Database URL (for migrations and Prisma Client)
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://chasmine_user:chasmine_password@db:3306/chasmine_dev"

# ========================================
# Frontend Configuration
# ========================================

# Backend API URL
BACKEND_URL=http://localhost:3001
